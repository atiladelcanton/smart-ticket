{
    "name": "atiladelcanton/smart-ticket",
    "description": "Complete helpdesk and ticket management system for Filament PHP. Features categorization, priorities, comments, attachments, metrics and administrative dashboard with modern and intuitive interface.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Atiladelcanton\\SmartTicket\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Atila Delcanton Rampazo"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2|^8.3",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.21",
        "pestphp/pest": "^3.7.4",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
